@{
    ViewData["Title"] = "Add Product/s Page";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<script src="~/js/Custom Script/CommonScript.js"></script>
<script src="~/js/Custom Script/AddProduct.js"></script>
<div>
    <h3 id="header">Add Product/s</h3>
    <span id="lstRowDlt" class="text-danger"></span>
    <span id="spnSuccess" class="text-success"></span>
    <table id="tblProduct" class="table table-hover table-bordered" cellspacing="0" style="font-size: 14px !important;">
        <tr>
            <th class="top-border">
                EntityName
            </th>
            <th class="top-border">
                FieldName
            </th>
            <th class="top-border">
                IsRequired
            </th>
            <th class="top-border">
                MaxLength
            </th>
            <th class="top-border">
                FieldSource
            </th>
            <th class="top-border" colspan="2"></th>
        </tr>
        <tr id="Row_0">
            <td>
                <input type="text" id="txtEntNm_0" onkeypress="return filterSpclChar(event);" maxlength="50" autocomplete="off"/>
                <br /> <span class="text-danger"></span>
            </td>
            <td>
                <input type="text" id="txtFldNm_0" onkeypress="return filterSpclChar(event);" maxlength="50" autocomplete="off"/>
                <br /> <span class="text-danger"></span>
            </td>
            <td>
                <input type="text" id="txtIsReq_0" onkeypress="return AllowZeroOrOne(event);" maxlength="1" autocomplete="off"/>
                <br /> <span class="text-danger"></span>
            </td>
            <td>
                <input type="text" id="txtMaxLen_0" onkeypress="return AllowNumber(event);" maxlength="3" autocomplete="off"/>
                <br /> <span class="text-danger"></span>
            </td>
            <td>
                <input type="text" id="txtFldSrc_0" onkeypress="return filterSpclChar(event);" maxlength="200" autocomplete="off"/>
                <br /> <span class="text-danger"></span>
            </td>
            <td>
                <img style="width: 18px !important;" src="/../content/images/plus.png" id="AddRow_0" value="Add" title="Click to add new row" onclick="AddNewRow(event,this)" />
            </td>
            <td id="removeTd_0">
                <a class="link" id="Remove_0" onclick="RemoveRec(this,0)" title="Click to Inactive record.">
                    <img src="../content/images/trash.png" alt="Delete icon" title="Click to remove from list" style="width:15px;height:17px;">
                    <br /><span class="text-danger" id="spnDelete_0_0"></span>
                </a>
            </td>
        </tr>
    </table>
    <div class="form-group">
        <br /><span class="text-danger" id="spnDuplicate"></span>
        <div class="col-md-12 text-center">
            <input type="button" value="Submit" class="btn btn-primary" onclick="return ValidateRecordBeforeSubmit()" />
            <input class="btn btn-primary" type="button" value="Back" onclick="location.href='@Url.Action("Index","Home")'" />
        </div>
    </div>
</div>
